{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "velite dev & next dev",
    "build": "prisma generate && velite && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "seo:build": "node scripts/seo-build.js",
    "seo:sitemap": "node scripts/generate-sitemap.js",
    "seo:robots": "node scripts/generate-robots.js",
    "seo:validate": "node scripts/validate-sitemap.js",
    "seo:verify": "node scripts/verify-seo.js",
    "seo:check": "node scripts/pre-deploy-check.js",
    "prebuild": "npm run seo:check",
    "postbuild": "npm run seo:build"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.0.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "next": "^15.5.12",
    "next-seo": "^6.4.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.2.1",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "velite": "^0.2.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "13.5.6",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "prisma": "^5.7.1",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
