generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  body      String
  createdAt DateTime @default(now())

  @@map("messages")
}

model Metric {
  id        String   @id @default(cuid())
  slug      String   @unique
  views     Int      @default(0)
  likes     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@map("metrics")
}

model Interaction {
  id        String     @id @default(cuid())
  ip        String
  slug      String
  type      ActionType
  createdAt DateTime   @default(now())

  @@unique([ip, slug, type])
  @@map("interactions")
}

enum ActionType {
  LIKE
  VIEW
}
